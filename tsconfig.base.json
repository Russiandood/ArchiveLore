{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@osg/types/*": [
        "packages/types/src/*"
      ],
      "@osg/db": [
        "packages/db/src/index.ts"
      ]
    }
  }
}